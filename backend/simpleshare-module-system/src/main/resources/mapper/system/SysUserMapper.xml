<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simpleshare.system.mapper.SysUserMapper">

    <resultMap type="SysUser" id="SysUserResult">
        <id     property="userId"       column="user_id"      />
        <result property="deptId"       column="dept_id"      />
        <result property="userName"     column="user_name"    />
        <result property="nickName"     column="nick_name"    />
        <result property="email"        column="email"        />
        <result property="phonenumber"  column="phonenumber"  />
        <result property="sex"          column="sex"          />
        <result property="avatar"       column="avatar"       />
        <result property="emailVerified" column="email_verified" />
        <result property="bio"          column="bio"          />
        <result property="website"      column="website"      />
        <result property="github"       column="github"       />
        <result property="twitter"      column="twitter"      />
        <result property="twoFactorEnabled" column="two_factor_enabled" />
        <result property="language"     column="language"     />
        <result property="timezone"     column="timezone"     />
        <result property="emailNotifications" column="email_notifications" />
        <result property="password"     column="password"     />
        <result property="status"       column="status"       />
        <result property="articleReviewRequired" column="article_review_required" />
        <result property="delFlag"      column="del_flag"     />
        <result property="loginIp"      column="login_ip"     />
        <result property="loginDate"    column="login_date"   />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
        <result property="remark"       column="remark"       />
        <result property="userType"     column="user_type"    />
        <result property="vipExpireTime" column="vip_expire_time" />
        <result property="tenantId"     column="tenant_id"    />
    </resultMap>

    <sql id="selectUserVo">
        select u.id as user_id, null as dept_id, u.username as user_name, u.nickname as nick_name, u.email, u.avatar, u.email_verified,
               u.bio, u.website, u.github, u.twitter, u.two_factor_enabled, u.language, u.timezone, u.email_notifications,
               u.phone as phonenumber, u.password, u.gender as sex, u.status, u.article_review_required,
               '0' as del_flag, u.last_login_ip as login_ip, u.last_login_time as login_date, u.create_by, u.create_time, u.remark, u.user_type, u.vip_expire_time, u.tenant_id
        from sys_user u
    </sql>

    <select id="selectUserList" parameterType="SysUser" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        <where>
            <if test="userId != null and userId != 0">
                AND u.id = #{userId}
            </if>
            <if test="userName != null and userName != ''">
                AND u.username like concat('%', #{userName}, '%')
            </if>
            <if test="status != null and status != ''">
                AND u.status = #{status}
            </if>
            <if test="phonenumber != null and phonenumber != ''">
                AND u.phonenumber like concat('%', #{phonenumber}, '%')
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(u.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(u.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
            <if test="deptId != null and deptId != 0">
                AND (u.dept_id = #{deptId} OR u.dept_id IN ( SELECT t.dept_id FROM sys_dept t WHERE find_in_set(#{deptId}, ancestors) ))
            </if>
            <if test="tenantId != null">
                AND u.tenant_id = #{tenantId}
            </if>
        </where>
    </select>

    <select id="selectUserByUserName" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.username = #{userName}
        <if test="tenantId != null">
            and u.tenant_id = #{tenantId}
        </if>
    </select>

    <select id="selectUserByEmail" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.email = #{email}
        <if test="tenantId != null">
            and u.tenant_id = #{tenantId}
        </if>
    </select>

    <select id="selectUserByPhone" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.phone = #{phone}
        <if test="tenantId != null">
            and u.tenant_id = #{tenantId}
        </if>
    </select>

    <select id="selectUserById" parameterType="Long" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.id = #{userId}
        <if test="tenantId != null">
            and u.tenant_id = #{tenantId}
        </if>
    </select>

    <select id="checkUserNameUnique" parameterType="String" resultType="int">
        select count(1) from sys_user where username = #{userName}
        <if test="tenantId != null">
            and tenant_id = #{tenantId}
        </if>
        limit 1
    </select>

    <select id="checkPhoneUnique" parameterType="String" resultType="int">
        select count(1) from sys_user where phone = #{phonenumber}
        <if test="tenantId != null">
            and tenant_id = #{tenantId}
        </if>
        limit 1
    </select>

    <select id="checkEmailUnique" parameterType="String" resultType="int">
        select count(1) from sys_user where email = #{email}
        <if test="tenantId != null">
            and tenant_id = #{tenantId}
        </if>
        limit 1
    </select>

    <insert id="insertUser" parameterType="SysUser" useGeneratedKeys="true" keyProperty="userId">
        insert into sys_user(
        <if test="userId != null and userId != 0">id,</if>
        <if test="userName != null and userName != ''">username,</if>
        <if test="nickName != null and nickName != ''">nickname,</if>
        <if test="email != null and email != ''">email,</if>
        <if test="avatar != null and avatar != ''">avatar,</if>
        <if test="emailVerified != null">email_verified,</if>
        <if test="bio != null and bio != ''">bio,</if>
        <if test="website != null and website != ''">website,</if>
        <if test="github != null and github != ''">github,</if>
        <if test="twitter != null and twitter != ''">twitter,</if>
        <if test="twoFactorEnabled != null">two_factor_enabled,</if>
        <if test="language != null and language != ''">language,</if>
        <if test="timezone != null and timezone != ''">timezone,</if>
        <if test="emailNotifications != null and emailNotifications != ''">email_notifications,</if>
        <if test="phonenumber != null and phonenumber != ''">phone,</if>
        <if test="sex != null and sex != ''">gender,</if>
        <if test="password != null and password != ''">password,</if>
        <if test="status != null and status != ''">status,</if>
        <if test="articleReviewRequired != null">article_review_required,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        <if test="remark != null and remark != ''">remark,</if>
        <if test="userType != null">user_type,</if>
        <if test="vipExpireTime != null">vip_expire_time,</if>
        <if test="tenantId != null">tenant_id,</if>
        create_time
        )values(
        <if test="userId != null and userId != ''">#{userId},</if>
        <if test="userName != null and userName != ''">#{userName},</if>
        <if test="nickName != null and nickName != ''">#{nickName},</if>
        <if test="email != null and email != ''">#{email},</if>
        <if test="avatar != null and avatar != ''">#{avatar},</if>
        <if test="emailVerified != null">#{emailVerified},</if>
        <if test="bio != null and bio != ''">#{bio},</if>
        <if test="website != null and website != ''">#{website},</if>
        <if test="github != null and github != ''">#{github},</if>
        <if test="twitter != null and twitter != ''">#{twitter},</if>
        <if test="twoFactorEnabled != null">#{twoFactorEnabled},</if>
        <if test="language != null and language != ''">#{language},</if>
        <if test="timezone != null and timezone != ''">#{timezone},</if>
        <if test="emailNotifications != null and emailNotifications != ''">#{emailNotifications},</if>
        <if test="phonenumber != null and phonenumber != ''">#{phonenumber},</if>
        <if test="sex != null and sex != ''">#{sex},</if>
        <if test="password != null and password != ''">#{password},</if>
        <if test="status != null and status != ''">#{status},</if>
        <if test="articleReviewRequired != null">#{articleReviewRequired},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="userType != null">#{userType},</if>
        <if test="vipExpireTime != null">#{vipExpireTime},</if>
        <if test="tenantId != null">#{tenantId},</if>
        sysdate()
        )
    </insert>

    <update id="updateUser" parameterType="SysUser">
        update sys_user
        <set>
            <if test="userName != null and userName != ''">username = #{userName},</if>
            <if test="nickName != null and nickName != ''">nickname = #{nickName},</if>
            <if test="email != null ">email = #{email},</if>
            <if test="phonenumber != null ">phone = #{phonenumber},</if>
            <if test="sex != null and sex != ''">gender = #{sex},</if>
            <if test="avatar != null and avatar != ''">avatar = #{avatar},</if>
            <if test="emailVerified != null">email_verified = #{emailVerified},</if>
            <if test="bio != null">bio = #{bio},</if>
            <if test="website != null">website = #{website},</if>
            <if test="github != null">github = #{github},</if>
            <if test="twitter != null">twitter = #{twitter},</if>
            <if test="twoFactorEnabled != null">two_factor_enabled = #{twoFactorEnabled},</if>
            <if test="language != null">language = #{language},</if>
            <if test="timezone != null">timezone = #{timezone},</if>
            <if test="emailNotifications != null">email_notifications = #{emailNotifications},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="articleReviewRequired != null">article_review_required = #{articleReviewRequired},</if>
            <if test="loginIp != null and loginIp != ''">last_login_ip = #{loginIp},</if>
            <if test="loginDate != null">last_login_time = #{loginDate},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="vipExpireTime != null">vip_expire_time = #{vipExpireTime},</if>
            update_time = sysdate()
        </set>
        where id = #{userId} and tenant_id = #{tenantId}
    </update>

    <update id="updateUserStatus" parameterType="SysUser">
        update sys_user set status = #{status} where id = #{userId} and tenant_id = #{tenantId}
    </update>

    <update id="updateUserAvatar" parameterType="SysUser">
        update sys_user set avatar = #{avatar} where username = #{userName} and tenant_id = #{tenantId}
    </update>

    <update id="resetUserPwd" parameterType="SysUser">
        update sys_user set password = #{password} where username = #{userName} and tenant_id = #{tenantId}
    </update>

    <delete id="deleteUserById" parameterType="Long">
        delete from sys_user where id = #{userId}
    </delete>

    <delete id="deleteUserByIds" parameterType="Long">
        delete from sys_user where id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <!-- VIP管理相关查询 -->
    <select id="selectExpiringVipUsers" parameterType="int" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.user_type = '3' 
        and u.vip_expire_time is not null 
        and u.vip_expire_time > now() 
        and u.vip_expire_time &lt;= date_add(now(), interval #{days} day)
        <if test="tenantId != null">
            and u.tenant_id = #{tenantId}
        </if>
    </select>

    <select id="selectExpiredVipUsers" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.user_type = '3' 
        and u.vip_expire_time is not null 
        and u.vip_expire_time &lt; now()
      <if test="tenantId != null">
          and u.tenant_id = #{tenantId}
      </if>
  </select>

  <select id="selectUsersByIds" parameterType="java.util.List" resultMap="SysUserResult">
      <include refid="selectUserVo"/>
      WHERE u.id IN
      <foreach collection="userIds" item="id" open="(" separator="," close=")">
          #{id}
      </foreach>
      <if test="tenantId != null">
          AND u.tenant_id = #{tenantId}
      </if>
  </select>

</mapper>
